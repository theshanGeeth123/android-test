<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#F2F7FF" />

    <!-- Border / Stroke (optional) -->
    <stroke
        android:width="1dp"
        android:color="#A0000000" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Padding inside (optional) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
