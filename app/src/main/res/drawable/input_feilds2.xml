<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <!-- Rounded corners -->
            <corners android:radius="10dp" />

            <!-- Fill color -->
            <solid android:color="#F2F2F2" />

            <!-- Border -->
            <stroke
                android:width="1dp"
                android:color="#BDBDBD" />

        </shape>
    </item>

</selector>
